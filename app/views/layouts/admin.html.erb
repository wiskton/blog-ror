<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'bootstrap.min', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


      <div id="wrapper">

          <!-- Navigation -->
          <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand" href="index.html">Blog</a>
              </div>
              <!-- Top Menu Items -->
              <ul class="nav navbar-right top-nav">

                  <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%= current_admin.name %> <b class="caret"></b></a>
                      <ul class="dropdown-menu">
                          <li>
                              <i class="fa fa-fw fa-power-off"></i> <%= link_to  "Sair", destroy_admin_session_path, method: :delete %>
                          </li>
                      </ul>
                  </li>
              </ul>
              <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
              <div class="collapse navbar-collapse navbar-ex1-collapse">
                  <ul class="nav navbar-nav side-nav">
                      <li <% if @active == :dashboard %>class="active"<% end %>>
                          <a href="<%= admin_root_path() %>"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                      </li>
                      <% if can? :read, Post %>
                      <li <% if @active == :post %>class="active"<% end %>>
                          <a href="<%= admin_posts_path() %>"><i class="fa fa-fw fa-dashboard"></i> Posts</a>
                      </li>
                      <% end %>
                      <% if can? :read, Category %>
                      <li <% if @active == :category %>class="active"<% end %>>
                          <a href="<%= admin_categories_path() %>"><i class="fa fa-fw fa-dashboard"></i> Categorias</a>
                      </li>
                      <% end %>
                      <% if can? :read, Admin %>
                      <li <% if @active == :admin %>class="active"<% end %>>
                          <a href="<%= admin_users_path() %>"><i class="fa fa-fw fa-dashboard"></i> Usu√°rios</a>
                      </li>
                      <% end %>
                  </ul>
              </div>
              <!-- /.navbar-collapse -->
          </nav>

          <div id="page-wrapper">

              <div class="container-fluid">

                  <%= yield %>

              </div>
              <!-- /.container-fluid -->

          </div>
          <!-- /#page-wrapper -->

      </div>
      <!-- /#wrapper -->

<%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'bootstrap.min', 'data-turbolinks-track' => true %>


</body>
</html>
