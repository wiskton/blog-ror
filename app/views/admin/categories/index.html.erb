<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Categorias
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> <a href="<%= admin_categories_path %>">Categorias</a>
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <% if can? :create, Category %><a href="<%= new_admin_category_path() %>" class="btn btn-success">Adicionar</a><% end %>
    </div>
</div>
<!-- /.row -->

<div class="row">
  &nbsp;
</div>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Categorias</h3>
          </div>
          <div class="panel-body">
              <div class="table-responsive">

                  <% if @categories.count > 0 %>
                  <table class="table table-bordered table-hover table-striped">
                      <thead>
                          <tr>
                              <th>ID #</th>
                              <th>Nome</th>
                              <% if can? :update, Category %><td>Editar</td><% end %>
                              <% if can? :destroy, Category %><td>Deletar</td><% end %>
                          </tr>
                      </thead>
                      <tbody>
                          <% @categories.each do |category| %>
                          <tr>
                              <td><%= category.id %></td>
                              <td><%= link_to category.name, admin_category_path(category.id) %></td>
                              <% if can? :update, Category %><td><%= link_to 'Editar', edit_admin_category_path(category.id) %></td><% end %>
                              <% if can? :destroy, Category %><td><%= link_to 'Deletar', admin_category_path(category.id), method: :delete, data: { confirm: "Tem certeza que deseja excluir?" } %></td><% end %>
                          </tr>
                          <% end %>
                      </tbody>
                  </table>
                  <% else %>
                    <p>Nenhum categoria no momento.</p>
                  <% end %>
              </div>
              <div class="text-right">
                  <%= paginate @categories %>
                  <!-- <a href="#">View All Transactions <i class="fa fa-arrow-circle-right"></i></a> -->
              </div>
          </div>
      </div>
  </div>
</div>
<!-- /.row -->
