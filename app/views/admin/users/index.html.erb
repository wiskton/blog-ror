<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Usu치rios
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> <a href="<%= admin_users_path %>">Usu치rios</a>
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <% if can? :create, Admin %><a href="<%= new_admin_user_path() %>" class="btn btn-success">Adicionar</a><% end %>
    </div>
</div>
<!-- /.row -->

<div class="row">
  &nbsp;
</div>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Usu치rios</h3>
          </div>
          <div class="panel-body">
              <div class="table-responsive">

                  <% if @users.count > 0 %>
                  <table class="table table-bordered table-hover table-striped">
                      <thead>
                          <tr>
                              <th>ID #</th>
                              <th>Nome</th>
                              <th>Email</th>
                              <th>Tipo</th>
                              <% if can? :update, Admin %><td>Editar</td><% end %>
                              <% if can? :destroy, Admin %><td>Deletar</td><% end %>
                          </tr>
                      </thead>
                      <tbody>
                          <% @users.each do |user| %>
                          <tr>
                              <td><%= user.id %></td>
                              <td><%= link_to user.name, admin_user_path(user.id) %></td>
                              <td><%= user.email %></td>
                              <td><%= user.admin? ? "Administrador" : "Moderador" %></td>
                              <% if can? :update, Admin %><td><%= link_to 'Editar', edit_admin_user_path(user.id) %></td><% end %>
                              <% if can? :destroy, Admin %><td><%= link_to 'Deletar', admin_user_path(user.id), method: :delete, data: { confirm: "Tem certeza que deseja excluir?" } %></td><% end %>
                          </tr>
                          <% end %>
                      </tbody>
                  </table>
                  <% else %>
                    <p>Nenhum usu치rio no momento.</p>
                  <% end %>
              </div>
              <div class="text-right">
                  <%= paginate @users %>
                  <!-- <a href="#">View All Transactions <i class="fa fa-arrow-circle-right"></i></a> -->
              </div>
          </div>
      </div>
  </div>
</div>
<!-- /.row -->
