<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Posts
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> <a href="<%= admin_posts_path %>">Posts</a>
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->

<% if @post.errors.any? %>
<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-danger alert-dismissable">
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    </div>
</div>
<% end %>

<div class="row">
  &nbsp;
</div>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Posts</h3>
          </div>
          <div class="panel-body">
              <div class="table-responsive">

                  <%= form_for @post, url: admin_post_path do |f| %>
                  <div class="field">
                    <div><label>Autor: </label><%= current_admin.name %></div>
                    <div><label>Categoria: </label><%= f.select :category_id, options_for_select(Category.all.map{|s|[s.name, s.id]}) %></div>
                    <div><label>Título: </label><%= f.text_field :title %></div>
                    <div><label>Conteúdo: </label><%= f.text_area :content %></div>
                    <div><label>Data: </label><%= f.datetime_select :datetime %></div>
                  </div>
                  <div class="actions">
                    <input type="submit" class="btn btn-success" value="Salvar">
                  </div>
                  <% end %>

              </div>
          </div>
      </div>
  </div>
</div>
<!-- /.row -->
